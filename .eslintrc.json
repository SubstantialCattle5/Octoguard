{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "globals": {
    "module": "readonly",
    "require": "readonly",
    "process": "readonly",
    "__dirname": "readonly"
  },
  "ignorePatterns": ["node_modules/", "*.min.js"],
  "overrides": [
    {
      "files": [".github/actions/**/*.js"],
      "rules": {
        "linebreak-style": "off",
        "quotes": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
